<Window
    x:Class="OqtaneThemeConverter.App.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <!-- Title -->
        <TextBlock Grid.Row="0" Text="Oqtane Theme Template Converter" 
                   FontSize="24" FontWeight="Bold" 
                   Margin="20,20,20,10" HorizontalAlignment="Center"/>
        
        <!-- Input Section -->
        <StackPanel Grid.Row="1" Margin="20,10">
            <TextBlock Text="Source Theme Folder:" Margin="0,5"/>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <TextBox x:Name="SourcePathTextBox" Grid.Column="0" Margin="0,0,10,0"/>
                <Button x:Name="BrowseSourceButton" Grid.Column="1" Content="Browse..." 
                        Click="BrowseSourceButton_Click"/>
            </Grid>
            
            <TextBlock Text="Destination Output:" Margin="0,15,0,5"/>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <TextBox x:Name="DestinationPathTextBox" Grid.Column="0" Margin="0,0,10,0"/>
                <Button x:Name="BrowseDestinationButton" Grid.Column="1" Content="Browse..." 
                        Click="BrowseDestinationButton_Click"/>
            </Grid>
            
            <TextBlock Text="Output Type:" Margin="0,15,0,5"/>
            <ComboBox x:Name="OutputTypeComboBox" SelectedIndex="0">
                <ComboBoxItem Content="Template Folder"/>
                <ComboBoxItem Content="NuGet Package (.nupkg)"/>
            </ComboBox>
        </StackPanel>
        
        <!-- Action Section -->
        <StackPanel Grid.Row="2" Margin="20,10" Orientation="Horizontal" HorizontalAlignment="Center">
            <Button x:Name="ConvertButton" Content="Convert Theme" 
                    Click="ConvertButton_Click" IsEnabled="False" Margin="0,0,10,0"/>
            <ProgressBar x:Name="ConversionProgressBar" Width="200" Height="20" 
                         Visibility="Collapsed"/>
        </StackPanel>
        
        <!-- Status Section -->
        <TextBlock x:Name="StatusTextBlock" Grid.Row="3" Text="Ready" 
                   Margin="20,10" HorizontalAlignment="Center"/>
        
        <!-- Log Section -->
        <Border Grid.Row="4" BorderBrush="Gray" BorderThickness="1" Margin="20">
            <ScrollViewer>
                <TextBlock x:Name="LogTextBlock" Text="Application started..." 
                           Margin="10" FontFamily="Consolas" FontSize="12"/>
            </ScrollViewer>
        </Border>
    </Grid>
</Window>